<tiles-definitions>

<!-- This layout is used for displaying the welcome screen, login, login success/failure scree-->
	
	<definition name="customer" path="/jsps/layouts/customerHome.jsp">
		<put name="header" value="/jsps/layouts/customerHeader.jsp" />
		<put name="body" value="/jsps/layouts/login.jsp" />
		<put name="footer" value="/jsps/layouts/customerFooter.jsp" />
	</definition>

	<definition name="customerIndex" path="/jsps/tiles/customerIndex.jsp">
		<put name="header" value="/jsps/layouts/customerHeader.jsp" />

<!-- This menu is the only extra parameter in this definition. This layout is used to display the menu after the customer login-->
		<put name="menu" value="/jsps/layouts/customerMenu.jsp" />
		<put name="body" value="/jsps/layouts/login.jsp" />
		<put name="footer" value="/jsps/layouts/customerFooter.jsp" />
	</definition>

	
</tiles-definitions>